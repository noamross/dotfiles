VER=
CCACHE=ccache
CC=$(CCACHE) gcc$(VER)
CXX=$(CCACHE) g++$(VER)
CXX11=$(CCACHE) g++$(VER)
CXX14=$(CCACHE) g++$(VER)
FC=$(CCACHE) gfortran$(VER)
F77=$(CCACHE) gfortran$(VER)
MAKE=make -j4
CFLAGS = -I/usr/local/opt/openssl/include
CXXFLAGS = -I/usr/local/opt/openssl/include -I/usr/local/opt/gettext/include -I/usr/local/opt/llvm/include
CPPFLAGS = -I/usr/local/opt/openssl/include -I/usr/local/opt/gettext/include -I/usr/local/opt/llvm/include
LDFLAGS = -L/usr/local/opt/openssl/lib -L/usr/local/opt/gettext/lib -L/usr/local/opt/llvm/lib

